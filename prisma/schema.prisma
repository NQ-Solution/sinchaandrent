generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Brand {
  id            String         @id @default(cuid())
  name          String
  nameKr        String
  nameEn        String?
  logo          String?
  isDomestic    Boolean        @default(true)
  sortOrder     Int            @default(0)
  isActive      Boolean        @default(true)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  masterColors  MasterColor[]
  masterOptions MasterOption[]
  vehicles      Vehicle[]
}

model MasterColor {
  id        String         @id @default(cuid())
  brandId   String
  type      ColorType
  name      String
  hexCode   String
  sortOrder Int            @default(0)
  isActive  Boolean        @default(true)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  brand     Brand          @relation(fields: [brandId], references: [id], onDelete: Cascade)
  vehicles  VehicleColor[]

  @@unique([brandId, type, name])
  @@index([brandId])
}

model MasterOption {
  id          String          @id @default(cuid())
  brandId     String
  name        String
  description String?
  category    String?
  sortOrder   Int             @default(0)
  isActive    Boolean         @default(true)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  brand       Brand           @relation(fields: [brandId], references: [id], onDelete: Cascade)
  vehicles    VehicleOption[]

  @@unique([brandId, name])
  @@index([brandId])
}

model Vehicle {
  id                 String          @id @default(cuid())
  brandId            String
  name               String
  category           VehicleCategory
  fuelTypes          String[]
  driveTypes         String[]
  seatingCapacityMin Int?
  seatingCapacityMax Int?
  basePrice          Int
  rentPrice60_0      Int?
  rentPrice48_0      Int?
  rentPrice36_0      Int?
  rentPrice24_0      Int?
  rentPrice60_25     Int?
  rentPrice48_25     Int?
  rentPrice36_25     Int?
  rentPrice24_25     Int?
  rentPrice60_50     Int?
  rentPrice48_50     Int?
  rentPrice36_50     Int?
  rentPrice24_50     Int?
  thumbnail          String?
  images             String[]
  isPopular          Boolean         @default(false)
  isNew              Boolean         @default(false)
  isActive           Boolean         @default(true)
  sortOrder          Int             @default(0)
  createdAt          DateTime        @default(now())
  updatedAt          DateTime        @updatedAt
  imagePadding       Int?
  imageSizePreset    String?
  baseModelName      String?
  hasOtherModels     Boolean         @default(true)
  colors             Color[]
  options            Option[]
  trims              Trim[]
  brand              Brand           @relation(fields: [brandId], references: [id])
  vehicleColors      VehicleColor[]
  vehicleOptions     VehicleOption[]

  @@index([brandId])
  @@index([isActive, isPopular])
}

model Trim {
  id          String       @id @default(cuid())
  vehicleId   String
  name        String
  description String?
  price       Int          @default(0)
  sortOrder   Int          @default(0)
  vehicle     Vehicle      @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  colors      TrimColor[]
  options     TrimOption[]

  @@index([vehicleId])
}

model Color {
  id        String    @id @default(cuid())
  vehicleId String
  type      ColorType
  name      String
  hexCode   String
  price     Int       @default(0)
  sortOrder Int       @default(0)
  vehicle   Vehicle   @relation(fields: [vehicleId], references: [id], onDelete: Cascade)

  @@index([vehicleId])
}

model TrimColor {
  id             String       @id @default(cuid())
  trimId         String
  vehicleColorId String
  trim           Trim         @relation(fields: [trimId], references: [id], onDelete: Cascade)
  vehicleColor   VehicleColor @relation(fields: [vehicleColorId], references: [id], onDelete: Cascade)

  @@unique([trimId, vehicleColorId])
  @@index([trimId])
  @@index([vehicleColorId])
}

model Option {
  id          String  @id @default(cuid())
  vehicleId   String
  name        String
  description String?
  price       Int     @default(0)
  category    String?
  sortOrder   Int     @default(0)
  vehicle     Vehicle @relation(fields: [vehicleId], references: [id], onDelete: Cascade)

  @@index([vehicleId])
}

model TrimOption {
  id              String        @id @default(cuid())
  trimId          String
  isIncluded      Boolean       @default(false)
  vehicleOptionId String
  trim            Trim          @relation(fields: [trimId], references: [id], onDelete: Cascade)
  vehicleOption   VehicleOption @relation(fields: [vehicleOptionId], references: [id], onDelete: Cascade)

  @@unique([trimId, vehicleOptionId])
  @@index([trimId])
  @@index([vehicleOptionId])
}

model VehicleColor {
  id            String      @id @default(cuid())
  vehicleId     String
  masterColorId String
  price         Int         @default(0)
  sortOrder     Int         @default(0)
  isAvailable   Boolean     @default(true)
  trims         TrimColor[]
  masterColor   MasterColor @relation(fields: [masterColorId], references: [id], onDelete: Cascade)
  vehicle       Vehicle     @relation(fields: [vehicleId], references: [id], onDelete: Cascade)

  @@unique([vehicleId, masterColorId])
  @@index([vehicleId])
  @@index([masterColorId])
}

model VehicleOption {
  id             String       @id @default(cuid())
  vehicleId      String
  masterOptionId String
  price          Int          @default(0)
  sortOrder      Int          @default(0)
  isAvailable    Boolean      @default(true)
  trims          TrimOption[]
  masterOption   MasterOption @relation(fields: [masterOptionId], references: [id], onDelete: Cascade)
  vehicle        Vehicle      @relation(fields: [vehicleId], references: [id], onDelete: Cascade)

  @@unique([vehicleId, masterOptionId])
  @@index([vehicleId])
  @@index([masterOptionId])
}

model FAQ {
  id        String   @id @default(cuid())
  question  String
  answer    String
  sortOrder Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Setting {
  id          String  @id @default(cuid())
  key         String  @unique
  value       String
  description String?
}

model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Banner {
  id              String    @id @default(cuid())
  title           String
  subtitle        String?
  image           String?
  mobileImage     String?
  link            String?
  linkText        String?
  description     String?
  backgroundColor String?
  textColor       String?
  startDate       DateTime?
  endDate         DateTime?
  sortOrder       Int       @default(0)
  isActive        Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Partner {
  id        String   @id @default(cuid())
  name      String
  logo      String?
  link      String?
  category  String?
  sortOrder Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CompanyInfo {
  id          String   @id @default(cuid())
  key         String   @unique
  value       String
  description String?
  updatedAt   DateTime @updatedAt
}

enum VehicleCategory {
  SEDAN
  SUV
  TRUCK
  VAN
  EV
  COMPACT
  HATCHBACK
  COUPE
  CONVERTIBLE
}

enum ColorType {
  EXTERIOR
  INTERIOR
}

// DB 백업
model Backup {
  id          String   @id @default(cuid())
  name        String   // 백업 이름 (예: "2024-01-07 수동 백업")
  description String?  // 백업 설명
  data        String   // 압축된 백업 데이터 (JSON)
  size        Int      // 데이터 크기 (bytes)
  createdAt   DateTime @default(now())
  createdBy   String?  // 백업 생성자 (관리자 이메일)
}
